# User-specific Xcode settings
*.xcuserstate
*.xcscmblueprint
*.xccheckout

# Ignore all user data in .xcodeproj and .xcworkspace
*.xcodeproj/xcuserdata/
*.xcworkspace/xcuserdata/

# Xcode scheme management (user-specific)
*.xcodeproj/xcuserdata/**/xcschemes/xcschememanagement.plist
*.xcworkspace/xcuserdata/**/xcschemes/xcschememanagement.plist

# Xcode project/workspace local schemes (optional: include shared ones if collaborating)
*.xcodeproj/xcuserdata/**/*.xcscheme
*.xcworkspace/xcuserdata/**/*.xcscheme

# Shared schemes are OK to include if team uses them
!*.xcodeproj/xcshareddata/xcschemes/*.xcscheme
!*.xcworkspace/xcshareddata/xcschemes/*.xcscheme

